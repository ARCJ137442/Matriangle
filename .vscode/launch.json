{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // "preLaunchTask": "npx tsc: build - tsconfig.json",
            "preLaunchTask": "tsc: 构建 - tsconfig.json",
            "program": "${workspaceFolder}\\test_common.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node-terminal",
            "name": "JavaScript Debug Terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Current TS File",
            // "type": "node",
            // "type": "node",
            "request": "launch",
            "args": [
                "${file}"
            ],
            "runtimeExecutable": "npx ts-node",
            "runtimeArgs": [
                // "-r",
                // "ts-node/register"
                "ts-node"
            ]
        }
    ]
}